@model IEnumerable<ShoppingApp.Models.ShoppingList>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Manage Your Shopping Lists</h1>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedDate)
            </td>
            <td>
                <a asp-action="EditShoppingListDetails" asp-route-ShoppingListId="@item.ShoppingListId">Edit</a> |
                <a asp-action="DeleteShoppingListDetails" asp-route-ShoppingListId="@item.ShoppingListId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>