@model IEnumerable<ItemViewModel>

@if (Model.Count() == 0)
{
    <p>No Items on this list</p>
}
else
{
    <table class="table">
    <thead>
        <tr>
            <th>
                <b>Item Name</b>            
            </th>
            <th>
                <b>Unit</b>            
            </th>
            <th>
                <b>Quantity</b>            
            </th>
            <th>
                <b>Unit Price</b>            
            </th>
            <th>
                <b>Delete</b>            
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @item.ItemName
            </td>
            <td>
                @item.Unit
            </td>
            <td>
                @item.Quantity
            </td>
            <td>
                $@item.UnitPrice
            </td>
            <td>
                 <input type="button" class="btn btn-primary text-light" value="X" onclick="RemoveItemFromList(@item.Id)" style="width:25%;">
            </td>
        </tr>
}
    </tbody>
</table>

    <div class="row">
        <div class="col d-flex align-items-center border-right"><b>Total : </b></div>
        <div class="col d-flex align-items-center"></div>
        <div class="col d-flex align-items-center"></div>
        <div class="col d-flex align-items-center" style="margin-right:90%">$@ViewData["Total"]</div>
    </div>
    <div class="row">
        <div class="col d-flex align-items-center border-right"><b>Created On this Date : </b></div>
        <div class="col d-flex align-items-center"></div>
        <div class="col d-flex align-items-center"></div>
        <div class="col d-flex align-items-center" style="margin-right:85%">@ViewData["CreatedDate"]</div>
    </div>
}

